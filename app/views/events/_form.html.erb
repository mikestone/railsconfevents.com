<div class="row">
  <div class="col-sm-10">
    <div class="form-group">
      <label for="name">Name</label> <small class="text-muted">(required)</small>
      <input type="text" class="form-control" id="name" name="name" placeholder="Event name" data-guard="required" value="<%= event.name %>" />
    </div>

    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <label for="date">Date</label> <small class="text-muted">(required)</small>
          <input type="text" class="form-control" id="date" name="date" placeholder="Ex: <%= current_conference.example_event_date %>" data-guard="required dateUS confDates" data-guard-conf-dates-message="Valid dates: <%= current_conference.valid_start_date %> - <%= current_conference.valid_end_date %>." data-valid-starting-at="<%= current_conference.iso_valid_start_date %>" data-valid-ending-at="<%= current_conference.iso_valid_end_date %>" value="<%= event.edit_date %>" />
        </div>
      </div>

      <div class="col-sm-4">
        <div class="form-group">
          <label for="start_time">Start Time</label> <small class="text-muted">(required)</small>
          <input type="text" class="form-control" id="start_time" name="start_time" placeholder="Ex: 7:00 pm" data-guard="required timeUS" value="<%= event.edit_start_time %>" />
        </div>
      </div>

      <div class="col-sm-4">
        <div class="form-group">
          <label for="end_time">End Time</label> <small class="text-muted">(required)</small>
          <input type="text" class="form-control" id="end_time" name="end_time" placeholder="Ex: 7:30 pm" data-guard="required timeUS" value="<%= event.edit_end_time %>" />
        </div>
      </div>
    </div>

    <fieldset class="well">
      <legend>Coordinators</legend>

      <% event.coordinators.each_with_index do |coordinator, i| %>
        <div class="row">
          <% if i != 0 %>
            <hr class="visible-xs-block" />
          <% end %>

          <div class="<%= coordinator_col_class %>">
            <div class="form-group">
              <label for="coordinator-<%= i %>">Coordinator</label>
              <input type="text" class="form-control" id="coordinator-<%= i %>" name="coordinators[]" placeholder="Coordinator" value="<%= coordinator.name %>" />
            </div>
          </div>

          <div class="<%= coordinator_col_class %>">
            <div class="form-group">
              <label for="coordinator_twitter-<%= i %>"><span class="visible-xs-inline">Coordinator </span>Twitter</label>

              <div class="input-group">
                <span class="input-group-addon" id="twitter_coordinator_at-<%= i %>">@</span>
                <input type="text" class="form-control" id="coordinator_twitter-<%= i %>" name="coordinator_twitters[]" placeholder="Coordinator" aria-describedby="twitter_coordinator_at-<%= i %>" data-guard="twitter" value="<%= coordinator.twitter %>" />
              </div>
            </div>
          </div>

          <% if active_user.can_specify_user_coordinators? %>
            <div class="<%= coordinator_col_class %>">
              <div class="form-group">
                <label for="coordinator_github-<%= i %>"><span class="visible-xs-inline">Coordinator </span>GitHub</label>

                <div class="input-group">
                  <span class="input-group-addon" id="github_coordinator_at-<%= i %>">@</span>
                  <input type="text" class="form-control" id="coordinator_github-<%= i %>" name="coordinator_githubs[]" placeholder="Coordinator" aria-describedby="github_coordinator_at-<%= i %>" data-guard="github" value="<%= coordinator.github_username %>" />
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <div class="row new-coordinator" id="new-coordinator-row">
        <% if event.coordinators.present? %>
          <hr class="visible-xs-block" />
        <% end %>

        <div class="<%= coordinator_col_class %>">
          <div class="form-group">
            <label for="coordinator-new">Coordinator</label>
            <input type="text" class="form-control" id="coordinator-new" name="coordinators[]" placeholder="Coordinator" />
          </div>
        </div>

        <div class="<%= coordinator_col_class %>">
          <div class="form-group">
            <label for="coordinator_twitter-new"><span class="visible-xs-inline">Coordinator </span>Twitter</label>

            <div class="input-group">
              <span class="input-group-addon" id="twitter_coordinator_at-new">@</span>
              <input type="text" class="form-control" id="coordinator_twitter-new" name="coordinator_twitters[]" placeholder="Coordinator" aria-describedby="twitter_coordinator_at-new" data-guard="twitter" />
            </div>
          </div>
        </div>

        <% if active_user.can_specify_user_coordinators? %>
          <div class="<%= coordinator_col_class %>">
            <div class="form-group">
              <label for="coordinator_github-new"><span class="visible-xs-inline">Coordinator </span>GitHub</label>

              <div class="input-group">
                <span class="input-group-addon" id="github_coordinator_at-new">@</span>
                <input type="text" class="form-control" id="coordinator_github-new" name="coordinator_githubs[]" placeholder="Coordinator" aria-describedby="github_coordinator_at-new" data-guard="github" />
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </fieldset>

    <div class="form-group">
      <label for="url">URL</label>
      <input type="text" class="form-control" id="url" name="url" placeholder="Event URL" value="<%= event.url %>" />
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      <input type="text" class="form-control" id="location" name="location" placeholder="Event location" value="<%= event.location %>" />
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="description" name="description" placeholder="Event description" rows="5"><%= event.description %></textarea>
    </div>

    <input type="submit" class="btn btn-default" value="<%= submit_label %>">
  </div>
</div>
